{
  "kind": "collectionType",
  "collectionName": "answers",
  "info": {
    "singularName": "answer",
    "pluralName": "answers",
    "displayName": "Answer"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "answer": {
      "type": "string",
      "required": true,
      "minLength": 1
    },
    "correct": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "order": {
      "type": "integer",
      "required": true,
      "min": 1,
      "default": 1
    },
    "image": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false
    },
    "question": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::question.question",
      "mappedBy": "answers"
    }
  }
}
